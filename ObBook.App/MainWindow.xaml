<Window x:Class="ObBook.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oblivion Book Creator (v1 scaffold)" Width="1400" Height="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="520" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" LastChildFill="True" Margin="10">
            <TextBlock DockPanel.Dock="Top" Text="Oblivion Assets" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="BtnAutoDetect" Content="Auto Detect" Width="100" Height="28" Margin="0,0,8,0" Click="BtnAutoDetect_Click"/>
                <Button x:Name="BtnBrowse" Content="Browse..." Width="90" Height="28" Margin="0,0,8,0" Click="BtnBrowse_Click"/>
                <Button x:Name="BtnScanAssets" Content="Scan" Width="70" Height="28" Click="BtnScanAssets_Click"/>
            </StackPanel>

            <TextBox x:Name="TxtOblivionPath"
                     DockPanel.Dock="Top"
                     Margin="0,0,0,8"
                     ToolTip="Oblivion game folder or Data folder" />

            <Border BorderBrush="#33000000" BorderThickness="1" CornerRadius="6">
                <TreeView x:Name="TreeAssets"
                          PreviewMouseLeftButtonDown="TreeAssets_PreviewMouseLeftButtonDown"
                          PreviewMouseMove="TreeAssets_PreviewMouseMove"/>
            </Border>
        </DockPanel>

        <Border Grid.Column="1" Background="#22000000"/>

        <DockPanel Grid.Column="2" LastChildFill="True" Margin="10">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="BtnCompile" Content="Compile" Width="110" Height="30" Margin="0,0,8,0" Click="BtnCompile_Click"/>
                <Button x:Name="BtnCopy" Content="Copy DESC" Width="110" Height="30" Click="BtnCopy_Click"/>
            </StackPanel>

            <TextBox x:Name="TxtSource"
                     FontFamily="Consolas"
                     FontSize="14"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="NoWrap"
                     AllowDrop="True"
                     PreviewDragOver="TxtSource_PreviewDragOver"
                     Drop="TxtSource_Drop"
                     TextChanged="TxtSource_TextChanged"/>
        </DockPanel>

        <Border Grid.Column="3" Background="#22000000"/>

        <DockPanel Grid.Column="4" Margin="10">
            <TextBlock Text="Preview" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <Border BorderBrush="#33000000" BorderThickness="1" CornerRadius="6">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Image x:Name="ImgPreview" Stretch="None"/>
                </ScrollViewer>
            </Border>

            <TextBlock Text="Diagnostics" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,6"/>
            <ListBox x:Name="LstDiags" FontFamily="Consolas" FontSize="12" />
        </DockPanel>
    </Grid>
</Window>
